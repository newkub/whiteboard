{
  "name": "whiteboard",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.3.5",
  "globalConcurrency": 32,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "watch": "turbo watch verify --ui=tui",
    "postinstall": "bunx taze@latest -r -w -i",
    "prepare": "lefthook install",
    "dev": "turbo dev --ui=tui",
    "format": "turbo format",
    "scan": "sg scan -r",
    "check:modules": "bunx node-modules-inspector",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "verify": "turbo verify"
  },
  "devDependencies": {
    "lefthook": "^1.13.6",
    "taze": "^19.9.2",
    "turbo": "^2.7.2"
  }
}

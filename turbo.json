{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "envMode": "loose",
  "globalDependencies": [],
  "tasks": {
    "watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "prepare": {
      "cache": false
    },
    "format": {
      "dependsOn": ["^prepare"]
    },
    "lint": {
      "dependsOn": ["^format"],
      "cache": false
    },
    "test": {
      "dependsOn": ["lint", "^lint"],
      "cache": true
    },
    "build": {
      "dependsOn": ["^build", "^lint"],
      "outputs": [],
      "cache": false
    },
    "verify": {
      "dependsOn": ["test", "^test"],
      "cache": false
    },
    "preview": {
      "dependsOn": ["^verify"]
    }
  }
}
